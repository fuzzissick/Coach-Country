<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CoachCountryUserRegistration">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="User Registration"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="Team"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_team"
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@string/github_client_secret" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="Event"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_event"
            android:layout_width="304dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/events" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_year"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="Year"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/years" />
    </LinearLayout>

    <Button
        android:id="@+id/register_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Register User" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_coach"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="Coach"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/field_coach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_mascot"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="Mascot"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/field_mascot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_location"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/field_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>