<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment
        android:id="@+id/runningMap"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="378dp"
        android:layout_above="@+id/top_container"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-11dp" />

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp">

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/timeHeader"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="142dp" />

        <Button
            android:id="@+id/start"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="214dp"
            android:layout_marginBottom="17dp"
            android:background="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="Start"
            android:textColor="@android:color/background_light"
            android:visibility="visible" />

        <Button
            android:id="@+id/pauseSession"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="214dp"
            android:layout_marginBottom="17dp"
            android:background="@android:color/holo_red_light"
            android:onClick="onClick"
            android:text="Pause"
            android:textColor="@android:color/background_light"
            android:visibility="invisible" />

        <Button
            android:id="@+id/finishWorkout"
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="214dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="17dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="onClick"
            android:text="Stop and Finish Workout"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/resumeSession"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="214dp"
            android:layout_marginBottom="17dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="Resume"
            android:textColor="@android:color/background_light"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/timeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="163dp"
            android:layout_marginBottom="165dp"
            android:text="Time"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/paceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="60dp"
            android:text="Pace: " />

        <TextView
            android:id="@+id/paceField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/distanceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="85dp"
            android:text="Distance: " />

        <TextView
            android:id="@+id/distanceField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="85dp" />

    </RelativeLayout>

</RelativeLayout>
